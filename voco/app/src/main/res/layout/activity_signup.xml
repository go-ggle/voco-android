<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.SignupActivity"
    android:paddingHorizontal="35dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signup_container1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        android:backgroundTint="@color/purple" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signup_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toTopOf="@id/signup_container2">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 회원가입"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/warning_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintBottom_toTopOf="@id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="잘못된 이메일 형식입니다"
            android:textColor="@color/orange"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:layout_marginTop="20dp"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/warning_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password"
            app:layout_constraintBottom_toTopOf="@id/confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="8자 이상의 숫자, 영어, 특수문자 !@#$%^+\-=만 가능합니다"
            android:textColor="@color/orange"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Confirm Password"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:layout_marginTop="20dp"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/warning_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/confirm_password"
            app:layout_constraintBottom_toTopOf="@id/nickname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="비밀번호가 일치하지 않습니다"
            android:textColor="@color/orange"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Nickname"
            app:layout_constraintTop_toBottomOf="@id/confirm_password"
            android:layout_marginTop="20dp"
            android:inputType="text" />
        <TextView
            android:id="@+id/warning_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nickname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="닉네임은 2자에서 8자 사이로 설정해주세요"
            android:textColor="@color/orange"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signup_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signup_container1"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:textSize="16dp"
            android:textColor="@color/pure_white"
            android:text="가입하기"
            android:paddingVertical="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:stateListAnimator="@null"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:textSize="16dp"
            android:textColor="@color/dark_purple"
            android:backgroundTint="@color/pure_white"
            app:strokeColor="@color/dark_purple"
            app:strokeWidth="1dp"
            android:text="취소"
            android:paddingVertical="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/signup_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:stateListAnimator="@null"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>