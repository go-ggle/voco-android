<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_round_4"
    android:backgroundTint="@color/pure_white"
    android:padding="30dp"
    tools:context=".dialog.CreateProjectDialog">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 제목"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:textSize="14dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="프로젝트 제목"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/language"
        android:fontFamily="@font/suit_regular"
        />
    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="언어 선택"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/title_edit"
        app:layout_constraintBottom_toTopOf="@id/row1"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"/>
    <RadioGroup
            android:id="@+id/row1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/language"
            android:checkedButton="@id/create_america"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:weightSum="3"
            >
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/create_america"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_language"
            android:text="영어(미국)"
            android:drawableStart="@drawable/ic_america_square"
            android:drawablePadding="7dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="11sp"
            android:button="@null"
            android:paddingHorizontal="12dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/create_uk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_language"
            android:button="@null"
            android:drawableStart="@drawable/ic_england_square"
            android:drawablePadding="7dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:paddingHorizontal="12dp"
            android:text="영어(영국)"
            android:textSize="11sp"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/create_india"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_language"
            android:text="영어(인도)"
            android:drawableStart="@drawable/ic_india_square"
            android:drawablePadding="7dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="11sp"
            android:button="@null"
            android:paddingHorizontal="12dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        </RadioGroup>
        <RadioGroup
            android:id="@+id/row2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/row1"
            android:weightSum="3"
            android:layout_marginTop="7dp">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/create_spain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_language"
            android:text="스페인어"
            android:drawableStart="@drawable/ic_spain_square"
            android:drawablePadding="7dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="11sp"
            android:button="@null"
            android:paddingHorizontal="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/create_france"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_language"
            android:text="프랑스어"
            android:drawableStart="@drawable/ic_france_square"
            android:drawablePadding="7dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="11sp"
            android:button="@null"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/create_italy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_language"
            android:text="이탈리아어"
            android:drawableStart="@drawable/ic_italy_square"
            android:drawablePadding="7dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="11sp"
            android:button="@null"
            android:paddingHorizontal="11dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        </RadioGroup>
    <RadioGroup
            android:id="@+id/row3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/row2"
            android:weightSum="3"
            android:layout_marginTop="7dp">
        <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_germany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_language"
                android:text="독일어"
                android:drawableStart="@drawable/ic_germany_square"
                android:drawablePadding="7dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="11sp"
                android:button="@null"
                android:paddingHorizontal="19dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_russian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_language"
                android:text="러시아어"
                android:drawableStart="@drawable/ic_russian_square"
                android:drawablePadding="7dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="11sp"
                android:button="@null"
                android:layout_marginHorizontal="6dp"
                android:paddingHorizontal="15dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_arab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_language"
                android:text="아랍어"
                android:drawableStart="@drawable/ic_arab_emirates_square"
                android:drawablePadding="7dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="11sp"
                android:button="@null"
                android:paddingHorizontal="19dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
    </RadioGroup>
    <RadioGroup
            android:id="@+id/row4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/row3"
            android:weightSum="3"
            android:layout_marginTop="7dp">
        <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_china"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_language"
                android:text="중국어"
                android:drawableStart="@drawable/ic_china_square"
                android:drawablePadding="7dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="11sp"
                android:button="@null"
                android:paddingHorizontal="19dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_japan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_language"
                android:text="일본어"
                android:drawableStart="@drawable/ic_japan_square"
                android:drawablePadding="7dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="11sp"
                android:button="@null"
                android:layout_marginHorizontal="6dp"
                android:paddingHorizontal="19dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/create_indonesia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_language"
                android:text="인도네시아어"
                android:drawableStart="@drawable/ic_indonesia_square"
                android:drawablePadding="7dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="9sp"
                android:button="@null"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
    </RadioGroup>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_round_8"
        android:text="확인"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:textColor="@color/pure_white"
        android:textSize="15dp"
        android:stateListAnimator="@null"
        android:backgroundTint="@color/light_orange"
        app:layout_constraintTop_toBottomOf="@id/row4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>