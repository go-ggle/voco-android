<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.CreateProjectActivity"
    android:background="@color/light_purple"
    android:fitsSystemWindows="true">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingTop="35dp"
        android:paddingBottom="20dp"
        android:background="@color/light_purple"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addproject_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="30dp"
        android:paddingRight="15dp">
        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="제목을 입력하세요"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@null"
            android:paddingVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageButton
            android:id="@+id/project_page_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_more"
            android:padding="15dp"
            android:background="@color/light_purple"
            app:tint="@color/blue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 01월 16일 03:24 작성됨"
        app:layout_constraintTop_toBottomOf="@id/addproject_Title"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12dp"
        android:paddingLeft="30dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/spoqahansansneo_regular"/>
    <TextView
            android:id="@+id/no_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="블럭을 추가해보세요"
            android:fontFamily="@font/suit_regular"
            android:textColor="@color/dark_gray"
            android:textSize="18dp"
            android:textAlignment="center"
            android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addproject_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/audio_play_box"
        tools:listitem="@layout/fragment_block"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addproject_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/audio_play_box"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_plus"
        app:maxImageSize="16dp"/>
    <com.google.android.exoplayer2.ui.PlayerControlView
        android:id="@+id/audio_play_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:surface_type="none"
        android:background="@color/blue"
        app:controller_layout_id="@layout/layout_play_controller"
        app:show_timeout="0"
        app:hide_on_touch="false"
        app:use_controller="true" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>