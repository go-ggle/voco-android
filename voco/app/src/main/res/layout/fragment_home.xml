<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/purple"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:paddingVertical="15dp"
        android:text="Teams"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:lineSpacingExtra="10dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"/>
    <ImageView
        android:id="@+id/add_team_button"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="@id/title1"
        app:layout_constraintBottom_toBottomOf="@id/title1"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_teams"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teams"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/fragment_team"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Projects"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginStart="25dp"
        android:lineSpacingExtra="10dp"
        app:layout_constraintTop_toBottomOf="@id/teams"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/background_round_30_light_gray"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/tab_text"
        app:tabBackground="@drawable/selector_tab"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/black"
        app:tabPaddingStart="20dp"
        app:tabPaddingEnd="20dp"
        app:tabIndicatorHeight="0dp" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/projects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>