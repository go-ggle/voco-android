<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.component.RecordFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_purple2"
        android:background="@drawable/background_round_20"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        android:elevation="10dp">
        <TextView
            android:id="@+id/record_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suit_bold"
            android:text="Who do these people think they are?"
            android:textColor="@color/pure_white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/record_percent"
            app:layout_constraintEnd_toStartOf="@id/record_percent"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="@id/record_percent"/>
        <ImageView
            android:id="@+id/record_fin_check"
            android:layout_width="31dp"
            android:layout_height="31dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
        <com.ramijemli.percentagechartview.PercentageChartView
            android:id="@+id/record_percent"
            android:layout_width="53dp"
            android:layout_height="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateTint="@color/white"
            app:pcv_progressColor="@color/white"
            app:pcv_progress="1.25"
            app:pcv_orientation="clockwise"
            app:pcv_startAngle="270"
            app:pcv_mode="ring"
            app:pcv_textSize="12dp"
            app:pcv_textStyle="bold"
            app:pcv_progressBarThickness="5dp"
            app:pcv_progressBarStyle="round"
            app:pcv_backgroundBarColor="#B6A4F7"
            app:pcv_backgroundBarThickness="5dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/record_play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_play"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/record_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:button="@null"
            android:visibility="gone"/>
        <com.chibde.visualizer.LineBarVisualizer
            android:id = "@+id/visualizer"
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            app:layout_constraintStart_toEndOf="@id/record_play_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/record_play_button"
            app:layout_constraintBottom_toBottomOf="@id/record_play_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

