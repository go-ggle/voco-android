<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/interval_picker"
      android:layout_width="300dp"
      android:layout_height="170dp"
      android:paddingTop="20dp"
      android:background="@drawable/background_roundtop_4"
      android:theme="@style/IntervalPickerTheme"
      android:orientation="horizontal"
      android:paddingHorizontal="40dp"
      android:elevation="10dp">
    <NumberPicker
        android:id="@+id/minute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/second"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="18dp"
        android:textColor="@color/purple"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/minute"/>
    <NumberPicker
        android:id="@+id/second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/minute"
        app:layout_constraintEnd_toEndOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
  <LinearLayout
      android:id="@+id/interval_picker_button_container"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="2"
      android:background="@drawable/background_roundbottom_4"
      android:paddingTop="10dp"
      android:paddingBottom="20dp"
      android:paddingHorizontal="26dp"
      android:elevation="10dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_marginRight="13dp"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:textSize="16dp"
        android:background="@drawable/background_round_4"
        android:backgroundTint="@color/light_gray2"
        android:text="@string/button_cancel"
        android:stateListAnimator="@null"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_marginLeft="13dp"
        android:text="@string/button_confirm"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:textSize="16dp"
        android:background="@drawable/background_round_4"
        android:backgroundTint="@color/light_orange"
        android:stateListAnimator="@null"/>
  </LinearLayout>
</LinearLayout>