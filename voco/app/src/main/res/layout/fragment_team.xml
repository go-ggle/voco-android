<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".component.TeamFragment">
    <ImageButton
        android:id="@+id/team_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/selector_team"
        android:src="@drawable/ic_team_one"
        android:padding="23dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/dark_purple" />
    <TextView
        android:id="@+id/team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="고글"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/team_button"
        app:layout_constraintStart_toStartOf="@id/team_button"
        app:layout_constraintEnd_toEndOf="@id/team_button"
        android:textSize="11dp"
        android:textAlignment="center"
        android:fontFamily="@font/spoqahansansneo_regular"

        android:letterSpacing="-0.03"
        android:layout_marginTop="7dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>