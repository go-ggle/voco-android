<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".component.BlockFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/project_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/project_editText"
        app:layout_constraintStart_toStartOf="@id/project_editText"
        app:layout_constraintEnd_toEndOf="@id/project_editText">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/popup_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="3dp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정민정"
                android:textColor="@color/purple"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="15dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/suit_bold" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/language"
                android:src="@drawable/ic_toggle_down"
                android:background="@color/light_purple"
                android:layout_marginLeft="6dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/project_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_delete"
            android:background="@color/light_purple"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:paddingLeft="7dp"/>
        <ImageButton
            android:id="@+id/project_download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/project_delete_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_download"
            android:background="@color/light_purple"
            android:paddingHorizontal="7dp"
            android:layout_marginRight="4dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"/>
        <ImageButton
            android:id="@+id/project_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/project_download_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_subplay"
            android:background="@color/light_purple"
            android:layout_marginRight="4dp"
            android:paddingHorizontal="7dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/project_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_block"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/project_menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:gravity="fill_vertical"
        android:padding="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqahansansneo_regular"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/project_editText"
        android:layout_marginTop="25dp">
    <TextView
        android:id="@+id/project_interval_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_round_30"
        android:backgroundTint="@color/white"
        android:text="인터벌 0.01초"
        android:fontFamily="@font/suit_regular"
        android:textSize="12dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/project_add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/dark_gray"
        android:paddingHorizontal="14dp"
        android:paddingVertical="5dp"
        android:drawableTint="@color/dark_gray"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/project_add_button"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/project_interval_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_round_30"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@null"
        android:text="음성"
        android:fontFamily="@font/suit_regular"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        android:paddingHorizontal="14dp"
        android:drawablePadding="4dp"
        android:drawableEnd="@drawable/ic_small_plus"
        android:drawableTint="@color/dark_gray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.5"
        android:scaleX="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>