<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity"
    android:paddingHorizontal="35dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_container1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        android:backgroundTint="@color/purple" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toTopOf="@id/login_container2">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 로그인"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/warning_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintBottom_toTopOf="@id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="잘못된 이메일 형식입니다"
            android:textColor="@color/orange"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:paddingRight="40dp"/>
        <CheckBox
            android:id="@+id/password_visibility"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@id/password"
            app:layout_constraintBottom_toBottomOf="@id/password"
            app:layout_constraintEnd_toEndOf="@id/password"
            android:button="@drawable/selector_pwd_eye"
            android:buttonTint="@color/dark_gray"
            android:layout_marginRight="10dp"
            android:checked="false"/>
        <TextView
            android:id="@+id/warning_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password"
            app:layout_constraintBottom_toTopOf="@id/login_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="8자 이상의 숫자, 영어, 특수문자 !@#$%^+\-=만 가능합니다"
            android:textColor="@color/orange"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:visibility="invisible"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:textSize="16dp"
            android:textColor="@color/pure_white"
            android:text="로그인"
            android:paddingVertical="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:stateListAnimator="@null"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디/비밀번호 찾기"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="14dp"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@id/login_button"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_container1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="30dp">
        <TextView
            android:id="@+id/sns_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNS 계정으로 간편 로그인"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="30dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sns_login_kakao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_kakao"
            android:paddingHorizontal="16dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:background="@drawable/background_round_30"
            android:backgroundTint="@color/kakao_yellow"
            app:layout_constraintTop_toBottomOf="@id/sns_login_title"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"
            android:layout_marginStart="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sns_login_naver"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/background_round_30"
            android:backgroundTint="@color/naver_green"
            app:layout_constraintTop_toBottomOf="@id/sns_login_title"
            app:layout_constraintStart_toEndOf="@id/sns_login_kakao"
            app:layout_constraintEnd_toStartOf="@id/sns_login_google"
            android:src="@drawable/ic_naver"
            android:padding="17dp"
            android:elevation="5dp"
            app:tint="@color/pure_white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sns_login_google"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/background_round_30"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/sns_login_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:elevation="5dp"
            android:src="@drawable/ic_google"
            android:padding="12dp"/>
        <TextView
            android:id="@+id/sns_login_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 계정이 없으신가요?"
            app:layout_constraintTop_toBottomOf="@id/sns_login_naver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sign_up_button"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textSize="14dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            app:layout_constraintStart_toEndOf="@id/sns_login_sub_title"
            app:layout_constraintTop_toBottomOf="@id/sns_login_naver"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="5dp"
            android:textColor="@color/orange"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>