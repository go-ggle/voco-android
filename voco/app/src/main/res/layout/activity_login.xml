<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity"
    android:paddingHorizontal="35dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_container1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        app:tint="@color/purple" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toTopOf="@id/login_container2">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 로그인"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8_white"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Email"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_8_white"
            android:backgroundTint="@color/light_gray4"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:padding="20dp"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:layout_marginTop="20dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:textSize="16dp"
            android:textColor="@color/pure_white"
            android:text="로그인"
            android:paddingVertical="20dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:stateListAnimator="@null"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디/비밀번호 찾기"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="14dp"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@id/login_button"
            android:paddingVertical="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_container1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/sns_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNS 계정으로 간편 로그인"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="30dp"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/sns_login_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_kakao_login"
            app:layout_constraintTop_toBottomOf="@id/sns_login_title"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="5dp"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/sns_login_naver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_naver_login"
            app:layout_constraintTop_toBottomOf="@id/sns_login_title"
            app:layout_constraintStart_toEndOf="@id/sns_login_kakao"
            app:layout_constraintEnd_toStartOf="@id/sns_login_google"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/sns_login_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_google_login"
            app:layout_constraintTop_toBottomOf="@id/sns_login_title"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/sns_login_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 계정이 없으신가요?"
            app:layout_constraintTop_toBottomOf="@id/sns_login_naver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sign_up_button"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="14dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textSize="14dp"
            android:fontFamily="@font/spoqahansansneo_bold"
            app:layout_constraintStart_toEndOf="@id/sns_login_sub_title"
            app:layout_constraintTop_toBottomOf="@id/sns_login_naver"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="5dp"
            android:textColor="@color/orange"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>