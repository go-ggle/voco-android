<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecordActivity"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="30dp"
    android:layout_marginHorizontal="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_left"
            app:tint="@color/dark_blue"
            android:padding="30dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="20dp"
            android:text="목소리 등록"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="19dp"
            android:textColor="@color/dark_blue"/>
        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="서비스 이용을 위해 목소리를 등록해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:textColor="@color/dark_gray"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:value="0.0125"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subTitle"
            app:thumbRadius="@null"
            app:trackColorActive="@color/purple"
            app:trackColorInactive="@color/light_purple2"
            app:trackHeight="4dp"
            android:enabled="false"/>
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/80"
            app:layout_constraintTop_toBottomOf="@id/bar"
            app:layout_constraintStart_toStartOf="@id/bar"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textColor="@color/dark_gray"
            android:layout_marginHorizontal="13dp"
            android:textSize="14dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/record_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_round_20_white"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="30dp"
        android:drawablePadding="25dp"
        android:layout_marginTop="60dp"
        android:text="지정된 문장을 정확히 읽어주세요."
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/ic_warning"
        android:fontFamily="@font/suit_regular"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:visibility="gone"
        tools:ignore="RtlCompat" />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/record_voice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/record_button"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:saveEnabled="false"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="30dp"
        android:soundEffectsEnabled="false"/>
    <TextView
        android:id="@+id/next_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/record_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_voice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="다음"
        android:drawableRight="@drawable/ic_small_right"
        android:drawablePadding="17dp"
        android:padding="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/suit_regular"
        android:textColor="#494949"/>
    <TextView
        android:id="@+id/prev_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/record_button"
        app:layout_constraintTop_toBottomOf="@id/record_voice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="이전"
        android:drawableLeft="@drawable/ic_small_left"
        android:drawablePadding="16dp"
        android:padding="30dp"
        android:textSize="16dp"
        android:fontFamily="@font/suit_regular"
        android:textColor="#494949"/>
    <ProgressBar
        android:id="@+id/record_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>