<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProjectListFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/board_style"
        android:paddingHorizontal="17dp"
        android:paddingVertical="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="3dp"
        android:elevation="2dp">
    <View
        android:id="@+id/icon"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:background="@drawable/ic_america"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미국 여행 브이로그"
        android:paddingBottom="3dp"
        android:maxLength="20"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/date"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/suit_regular"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 01월 05일 16:22"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/gray"
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/spoqahansansneo_regular"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/favorites"
        android:layout_width="18dp"
        android:layout_height="25dp"
        android:background="@drawable/favorites_button_style"
        android:button="@null"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/project"
        app:layout_constraintEnd_toEndOf="@id/project"
        app:layout_constraintTop_toBottomOf="@id/project"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="2dp"
        android:background="@color/light_gray3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
