<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddProjectListFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/project_menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/project_editText"
        app:layout_constraintStart_toStartOf="@id/project_editText"
        app:layout_constraintEnd_toEndOf="@id/project_editText">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/countryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_america"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영어(미국)"
                android:textColor="@color/purple"
                app:layout_constraintStart_toEndOf="@id/countryIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="13dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/suit_bold" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/language"
                android:src="@drawable/ic_toggle_down"
                android:background="@color/light_purple"
                android:layout_marginLeft="6dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/project_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_delete"
            android:background="@color/light_purple"/>
        <ImageButton
            android:id="@+id/project_download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/project_delete_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_download"
            android:background="@color/light_purple"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:id="@+id/project_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/project_download_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_sub_play"
            android:background="@color/light_purple"
            android:layout_marginRight="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/project_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/project_edittext_style"
        android:minHeight="57dp"
        app:layout_constraintTop_toBottomOf="@id/project_menu_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:gravity="top"
        android:padding="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqahansansneo_regular"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/project_editText"
        android:layout_marginTop="25dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/project_interval_button"
        android:layout_width="75dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/round_button_style"
        android:backgroundTint="@color/white"
        android:text="인터벌 0.10초"
        android:fontFamily="@font/suit_regular"
        android:textSize="9dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/project_add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/dark_gray"
        android:paddingHorizontal="7dp"
        android:drawableTint="@color/dark_gray"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/project_add_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/project_interval_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_button_style"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@null"
        android:text="음성"
        android:fontFamily="@font/suit_regular"
        android:textSize="9dp"
        android:textColor="@color/dark_gray"
        android:paddingHorizontal="7dp"
        android:drawableEnd="@drawable/ic_small_plus"
        android:drawableTint="@color/dark_gray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>