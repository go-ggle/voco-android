<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VoiceRegistrationActivity"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/record_voice"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_left"
            app:tint="@color/dark_blue"
            android:padding="30dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="20dp"
            android:text="목소리 등록"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="18dp"
            android:textColor="@color/dark_blue"/>
        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="서비스 이용을 위해 목소리를 등록해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="12dp"
            android:textColor="@color/dark_gray"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:value="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subTitle"
            app:thumbRadius="@null"
            app:trackColorActive="@color/purple"
            app:trackColorInactive="@color/light_purple2"
            app:trackHeight="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/50"
            app:layout_constraintTop_toBottomOf="@id/bar"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textColor="@color/dark_gray"
            android:layout_marginHorizontal="13dp"
            android:textSize="14dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_voice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/voice_registration_button"
        android:layout_marginVertical="40dp">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/voice_registration_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_round_30_light_gray"
        android:backgroundTint="@color/purple"
        android:text="목소리 등록 시작하기"
        android:textColor="@color/pure_white"
        android:fontFamily="@font/spoqahansansneo_bold"
        android:textSize="16dp"
        android:layout_marginHorizontal="14dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>